<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:id="@+id/cardView9"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="16dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/image_doctor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@color/skyblue"
                />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:gravity="start|top">

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/justin_case"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/doctor_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/light_black"
                android:text="@string/ophthalmologist" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:layout_gravity="bottom">

                <ImageView
                    android:id="@+id/doctor_rating"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rating_icon"
                    app:tint="@color/yellow" />

                <TextView
                    android:id="@+id/doctor_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/light_black"
                    android:text="@string/_16_reviews" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>